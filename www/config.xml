<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.mbeguchoice.app" versionCode="01" version="1.0.2">   
    <name>MbeguChoice</name>
    <description>MbeguChoice Android App</description>
    <author href="http:creativeyr.co.ke" email="e.wamugu@creative.co.ke">Elric Wamugu</author>
	
    <content src="index.html" />
	
    <preference name="orientation"  value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-maxSdkVersion" value="18" />
    <preference name="android-targetSdkVersion" value="17" />
    <preference name="fullscreen" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
	<gap:splash src="splash.png" />
   
    <icon src="icon.png" />
    <icon gap:platform="android" gap:density="ldpi" gap:qualifier="ldpi" src="res/icon/android/icon-36-ldpi.png" />
    <icon gap:platform="android" gap:density="mdpi" gap:qualifier="mdpi" src="res/icon/android/icon-48-mdpi.png" />
    <icon gap:platform="android" gap:density="hdpi" gap:qualifier="hdpi" src="res/icon/android/icon-72-hdpi.png" />
    <icon gap:platform="android" gap:density="xhdpi" gap:qualifier="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
    <icon gap:platform="android" gap:density="xxhdpi" gap:qualifier="xxhdpi" src="res/icon/android/icon-144-xxhdpi.png" />
    <icon gap:platform="android" gap:density="xxxhdpi" gap:qualifier="xxxhdpi" src="res/icon/android/icon-192-xxxhdpi.png" />
    <icon gap:platform="android" gap:density="web" gap:qualifier="web" src="res/icon/android/icon-512.png" />
    
    <gap:splash gap:platform="android" gap:density="port-ldpi" gap:qualifier="port-ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="port-mdpi" gap:qualifier="port-mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="port-hdpi" gap:qualifier="port-hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="port-xhdpi" gap:qualifier="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
	
    <gap:plugin name="com.brodysoft.sqliteplugin" version="1.0.6" />
    <gap:plugin name="com.jcjee.plugins.emailcomposer" version="1.4.6" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />

    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <access origin="cdvfile://*" />
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
    </feature>
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
</widget>