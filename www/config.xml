<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.mbeguchoice.app" versionCode="01" version="1.0.0">   
    <name>MbeguChoice</name>
    <description>MbeguChoice Android App</description>
    <author href="http:creativeyr.co.ke" email="e.wamugu@creative.co.ke">Elric Wamugu</author>
	
    <content src="index.html" />
	
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="android-maxSdkVersion" value="23" />
    <preference name="android-targetSdkVersion" value="19" />
    <preference name="android-installLocation" value="auto" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
   
    <icon src="logo.png" />
    <icon gap:platform="android" gap:density="ldpi" gap:qualifier="ldpi" src="res/icon/android/logo-36-ldpi.png" />
    <icon gap:platform="android" gap:density="mdpi" gap:qualifier="mdpi" src="res/icon/android/logo-48-mdpi.png" />
    <icon gap:platform="android" gap:density="hdpi" gap:qualifier="hdpi" src="res/icon/android/logo-72-hdpi.png" />
    <icon gap:platform="android" gap:density="xhdpi" gap:qualifier="xhdpi" src="res/icon/android/logo-96-xhdpi.png" />
    <icon gap:platform="android" gap:density="xxhdpi" gap:qualifier="xxhdpi" src="res/icon/android/logo-144-xxhdpi.png" />
    <icon gap:platform="android" gap:density="xxxhdpi" gap:qualifier="xxxhdpi" src="res/icon/android/logo-192-xxxhdpi.png" />
    <icon gap:platform="android" gap:density="web" gap:qualifier="web" src="res/icon/android/logo-512.png" />
    
    <gap:splash gap:platform="android" gap:density="port-ldpi" gap:qualifier="port-ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="port-mdpi" gap:qualifier="port-mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="port-hdpi" gap:qualifier="port-hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="port-xhdpi" gap:qualifier="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
	
    <plugin name="com.brodysoft.sqliteplugin" source="pgb" spec="1.0.6" />
    <plugin name="com.cordova.plugins.fileopener" source="pgb" spec="1.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.1" />
    <plugin name="de.appplant.cordova.plugin.email-composer" source="pgb" spec="0.8.2" />

    <plugin name="org.apache.cordova.device-orientation" source="pgb" spec="0.3.11" />
    <plugin name="org.apache.cordova.dialogs" source="pgb" spec="0.3.0" />
    <plugin name="org.apache.cordova.file" source="pgb" spec="1.3.3" />
    <plugin name="org.apache.cordova.file-transfer" source="pgb" spec="0.5.0" />
    <plugin name="org.apache.cordova.globalization" source="pgb" spec="0.3.4" />
    <plugin name="org.apache.cordova.inappbrowser" source="pgb" spec="0.6.0" />
    <plugin name="org.apache.cordova.splashscreen" source="pgb" spec="1.0.0" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <access origin="cdvfile://*" />
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
    </feature>
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    
</widget>