<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mbeguchoice.app" version="2.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>MbeguChoice</name>
    <description>
        MbeguChoice Android App
    </description>

    <author href="http:creativeyr.co.ke" email="e.wamugu@creative.co.ke">Elric Wamugu</author>

    <preference name="phonegap-version" value="cli-5.2.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="android-installLocation" value="auto" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="permissions" value="none"/>
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-maxSdkVersion" value="23" />
    <preference name="android-targetSdkVersion" value="19" />

    <access origin="*" />
    <access origin="cdvfile://*" />

    <icon src="icon.png" />
    <icon gap:platform="android" gap:density="ldpi" gap:qualifier="ldpi" src="res/icon/android/icon-36-ldpi.png" />
    <icon gap:platform="android" gap:density="mdpi" gap:qualifier="mdpi" src="res/icon/android/icon-48-mdpi.png" />
    <icon gap:platform="android" gap:density="hdpi" gap:qualifier="hdpi" src="res/icon/android/icon-72-hdpi.png" />
    <icon gap:platform="android" gap:density="xhdpi" gap:qualifier="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
    <icon gap:platform="android" gap:density="xxhdpi" gap:qualifier="xxhdpi" src="res/icon/android/icon-144-xxhdpi.png" />
    <icon gap:platform="android" gap:density="xxxhdpi" gap:qualifier="xxxhdpi" src="res/icon/android/icon-192-xxxhdpi.png" />
    <icon gap:platform="android" gap:density="web" gap:qualifier="web" src="res/icon/android/icon-512.png" />
    
    <gap:splash gap:platform="android" gap:density="port-ldpi" gap:qualifier="port-ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="port-mdpi" gap:qualifier="port-mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="port-hdpi" gap:qualifier="port-hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="port-xhdpi" gap:qualifier="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    
    <gap:plugin name="com.brodysoft.sqliteplugin" />
    <gap:plugin name="de.appplant.cordova.plugin.email-composer" />
    <gap:plugin name="com.cordova.plugins.fileopener" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="cordova-plugin-dialogs" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="cordova-plugin-x-toast" source="npm" />

    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
    </feature>
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    <feature name="Toast">
        <param name="android-package" value="nl.xservices.plugins.Toast" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>

</widget>